{
  "name": "@ivangabriele/eslint-config",
  "description": "My most commonly used ESLint configurations.",
  "license": "MIT",
  "version": "8.0.1",
  "private": true,
  "engines": {
    "node": ">=20",
    "npm": "10"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --config=./.eslintrc.dev.json --ext=js",
    "test:unit": "npm run --workspaces test:unit",
    "preversion": "npm run test",
    "postversion": "node ./scripts/finalizeVersionBump.js"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@ivangabriele/commitlint-config": "1.1.0",
    "@ivangabriele/prettier-config": "4.0.1",
    "@swc/core": "1.3.101",
    "@swc/jest": "0.2.29",
    "@tsconfig/recommended": "1.0.3",
    "@types/jest": "29.5.11",
    "enhanced-resolve": "5.15.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "prettier": "3.1.1",
    "shelljs": "0.8.5",
    "typescript": "5.3.3"
  },
  "resolutions": {
    "json-schema": ">=0.4.0",
    "minimist": ">=1.2.6",
    "semver": ">=6.3.1"
  },
  "workspaces": [
    "./packages/*"
  ],
  "prettier": "@ivangabriele/prettier-config"
}

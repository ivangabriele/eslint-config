{
  "name": "@ivangabriele/eslint-config",
  "description": "My most commonly used ESLint configurations.",
  "license": "MIT",
  "version": "8.0.1",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20",
    "npm": "10"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --config=./.eslintrc.dev.json .",
    "test:unit": "npm run --workspaces test:unit",
    "preversion": "npm run test",
    "postversion": "node ./scripts/finalizeVersionBump.js"
  },
  "devDependencies": {
    "@babel/core": "7.23.9",
    "@babel/eslint-parser": "7.23.10",
    "@babel/preset-env": "7.23.9",
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@ivangabriele/commitlint-config": "1.1.0",
    "@ivangabriele/prettier-config": "4.0.1",
    "@ivangabriele/tsconfig-node": "1.2.2",
    "@types/jest": "29.5.12",
    "chalk": "5.3.0",
    "enhanced-resolve": "5.15.0",
    "esm-path": "1.0.1",
    "husky": "9.0.10",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "shelljs": "0.8.5",
    "typescript": "5.3.3"
  },
  "resolutions": {
    "json-schema": ">=0.4.0",
    "minimist": ">=1.2.6",
    "semver": ">=6.3.1"
  },
  "workspaces": [
    "./packages/*"
  ],
  "prettier": "@ivangabriele/prettier-config"
}

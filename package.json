{
  "name": "@ivangabriele/eslint-config",
  "description": "My ESLint configurations.",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint .",
    "test:unit": "npm run test --workspaces"
  },
  "devDependencies": {
    "@tsconfig/recommended": "1.0.1",
    "husky": "7.0.1",
    "lint-staged": "11.1.1"
  },
  "workspaces": [
    "./packages/*"
  ],
  "prettier": "@ivangabriele/prettier-config",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}

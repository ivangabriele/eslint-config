{
  "name": "@ivangabriele/eslint-config",
  "description": "My most commonly used ESLint configurations.",
  "license": "MIT",
  "version": "4.3.0",
  "private": true,
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --config=./.eslintrc.dev.json --ext=js",
    "test:unit": "npm run --workspaces test:unit",
    "preversion": "npm run test",
    "postversion": "node ./scripts/finalizeVersionBump.js"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@ivangabriele/commitlint-config": "1.0.6",
    "@ivangabriele/prettier-config": "3.1.0",
    "@swc/core": "1.3.21",
    "@swc/jest": "0.2.23",
    "@tsconfig/recommended": "1.0.1",
    "@types/jest": "29.2.4",
    "enhanced-resolve": "5.12.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "prettier": "2.8.0",
    "shelljs": "0.8.5",
    "typescript": "4.9.3"
  },
  "resolutions": {
    "json-schema": ">=0.4.0",
    "minimist": ">=1.2.6"
  },
  "workspaces": [
    "./packages/*"
  ],
  "prettier": "@ivangabriele/prettier-config"
}

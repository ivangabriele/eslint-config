{
  "name": "@ivangabriele/eslint-config",
  "description": "My most commonly used ESLint configurations.",
  "license": "MIT",
  "version": "3.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "test": "yarn test:lint && yarn test:unit",
    "test:lint": "eslint . --ext=js",
    "test:unit": "yarn workspaces run test:unit",
    "preversion": "yarn test",
    "postversion": "node ./scripts/finalizeVersionBump.js"
  },
  "devDependencies": {
    "@ivangabriele/commitlint-config": "1.0.5",
    "@ivangabriele/prettier-config": "3.0.2",
    "@tsconfig/recommended": "1.0.1",
    "@types/jest": "27.4.1",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "prettier": "2.6.0",
    "shelljs": "0.8.5",
    "typescript": "4.6.2"
  },
  "resolutions": {
    "json-schema": ">=0.4.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "prettier": "@ivangabriele/prettier-config"
}
